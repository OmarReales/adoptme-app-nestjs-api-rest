<!-- Pet Detail Page -->
<section class="py-5">
    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
                          <button class="btn btn-outline-primary btn-lg share-pet-btn">
                            <i class="fas fa-share-alt me-2"></i>Compartir
                        </button>
                        <button class="btn btn-outline-secondary btn-lg favorite-pet-btn" data-pet-id="{{pet._id}}">
                            <i class="far fa-bookmark me-2"></i>Guardar
                        </button>    <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <li class="breadcrumb-item"><a href="/pets">Mascotas</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{pet.name}}</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Pet Image Gallery -->
            <div class="col-lg-6">
                <div class="pet-gallery">
                    {{#if pet.images}}
                    <div id="petCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner rounded-3">
                            {{#each pet.images}}
                            <div class="carousel-item {{#if @first}}active{{/if}}">
                                <img src="{{this}}" class="d-block w-100 pet-detail-image" alt="{{../pet.name}}">
                            </div>
                            {{/each}}
                        </div>
                        {{#if (gt pet.images.length 1)}}
                        <button class="carousel-control-prev" type="button" data-bs-target="#petCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#petCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Siguiente</span>
                        </button>
                        {{/if}}
                    </div>
                    {{else}}
                    <div class="pet-placeholder-large rounded-3">
                        <i class="fas fa-paw fa-5x text-muted"></i>
                    </div>
                    {{/if}}
                </div>
            </div>

            <!-- Pet Information -->
            <div class="col-lg-6">
                <div class="pet-info-section">
                    <!-- Status Badge -->
                    <div class="mb-3">
                        <span class="badge pet-status-large {{pet.status}}">
                            {{#if (eq pet.status 'available')}}
                                <i class="fas fa-heart me-2"></i>Disponible para Adopción
                            {{else if (eq pet.status 'adopted')}}
                                <i class="fas fa-home me-2"></i>Adoptado
                            {{else if (eq pet.status 'pending')}}
                                <i class="fas fa-clock me-2"></i>Adopción Pendiente
                            {{/if}}
                        </span>
                    </div>

                    <!-- Pet Name and Basic Info -->
                    <h1 class="display-4 fw-bold text-gradient mb-3">{{pet.name}}</h1>
                    
                    <div class="row g-3 mb-4">
                        <div class="col-6">
                            <div class="info-card">
                                <div class="info-icon">
                                    <i class="fas fa-dog"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Especie</div>
                                    <div class="info-value">{{pet.species}}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="info-card">
                                <div class="info-icon">
                                    <i class="fas fa-birthday-cake"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Edad</div>
                                    <div class="info-value">{{pet.age}} años</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="info-card">
                                <div class="info-icon">
                                    <i class="fas fa-venus-mars"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Género</div>
                                    <div class="info-value">{{pet.gender}}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="info-card">
                                <div class="info-icon">
                                    <i class="fas fa-weight"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Peso</div>
                                    <div class="info-value">{{pet.weight}} kg</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <h4 class="fw-bold mb-3">Descripción</h4>
                        <p class="lead">{{pet.description}}</p>
                    </div>

                    <!-- Characteristics -->
                    {{#if pet.characteristics}}
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">Características</h5>
                        <div class="characteristics-list">
                            {{#each pet.characteristics}}
                            <span class="badge bg-primary me-2 mb-2">{{this}}</span>
                            {{/each}}
                        </div>
                    </div>
                    {{/if}}

                    <!-- Health Information -->
                    {{#if pet.healthInfo}}
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">Información de Salud</h5>
                        <div class="health-info">
                            {{#if pet.healthInfo.vaccinated}}
                            <div class="health-item">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Vacunado
                            </div>
                            {{/if}}
                            {{#if pet.healthInfo.sterilized}}
                            <div class="health-item">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Esterilizado
                            </div>
                            {{/if}}
                            {{#if pet.healthInfo.dewormed}}
                            <div class="health-item">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Desparasitado
                            </div>
                            {{/if}}
                        </div>
                    </div>
                    {{/if}}

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3 flex-wrap">
                        {{#if (eq pet.status 'available')}}
                        <a href="/adoptions/create?petId={{pet._id}}" class="btn btn-primary btn-lg">
                            <i class="fas fa-heart me-2"></i>Adoptar a {{pet.name}}
                        </a>
                        {{/if}}
                        <button class="btn btn-outline-primary btn-lg share-pet-btn">
                            <i class="fas fa-share me-2"></i>Compartir
                        </button>
                        <button class="btn btn-outline-secondary btn-lg favorite-pet-btn" data-pet-id="{{pet._id}}">
                            <i class="fas fa-bookmark me-2"></i>Guardar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Information Tabs -->
        <div class="row mt-5">
            <div class="col-12">
                <ul class="nav nav-tabs" id="petTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="care-tab" data-bs-toggle="tab" data-bs-target="#care" type="button" role="tab" aria-controls="care" aria-selected="true">
                            <i class="fas fa-heart me-2"></i>Cuidados
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button" role="tab" aria-controls="history" aria-selected="false">
                            <i class="fas fa-history me-2"></i>Historia
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">
                            <i class="fas fa-phone me-2"></i>Contacto
                        </button>
                    </li>
                </ul>
                <div class="tab-content" id="petTabsContent">
                    <div class="tab-pane fade show active" id="care" role="tabpanel" aria-labelledby="care-tab">
                        <div class="tab-content-wrapper">
                            <h5 class="fw-bold mb-3">Cuidados Necesarios</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Alimentación</h6>
                                    <p>{{pet.careInfo.feeding}}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6>Ejercicio</h6>
                                    <p>{{pet.careInfo.exercise}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab">
                        <div class="tab-content-wrapper">
                            <h5 class="fw-bold mb-3">Historia de {{pet.name}}</h5>
                            <p>{{pet.history}}</p>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        <div class="tab-content-wrapper">
                            <h5 class="fw-bold mb-3">Información de Contacto</h5>
                            <p>Para más información sobre {{pet.name}}, contacta con nuestro equipo de adopciones.</p>
                            <div class="contact-info">
                                <div class="contact-item">
                                    <i class="fas fa-envelope me-2"></i>
                                    <span>adoptions@adoptme.com</span>
                                </div>
                                <div class="contact-item">
                                    <i class="fas fa-phone me-2"></i>
                                    <span>+1 (555) 123-4567</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Similar Pets -->
        {{#if similarPets}}
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="fw-bold mb-4">Mascotas Similares</h3>
                <div class="row g-3">
                    {{#each similarPets}}
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card pet-card-small">
                            <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                            <div class="card-body">
                                <h6 class="card-title">{{this.name}}</h6>
                                <p class="card-text small text-muted">{{this.species}} • {{this.age}} años</p>
                                <a href="/pets/{{this._id}}" class="btn btn-outline-primary btn-sm w-100">Ver Detalles</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</section>
