<!-- Pets List Page -->
<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="display-5 fw-bold text-gradient">
                        <i class="fas fa-paw me-3"></i>Mascotas Disponibles
                    </h1>
                    <a href="/pets/create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Agregar Mascota
                    </a>
                </div>
                <p class="lead text-muted">Encuentra tu compañero perfecto</p>
            </div>
        </div>

        <!-- Filter and Search -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <form class="row g-3" id="filter-form">
                            <div class="col-md-4">
                                <label for="search" class="form-label">Buscar</label>
                                <input type="text" class="form-control" id="search" placeholder="Nombre de la mascota...">
                            </div>
                            <div class="col-md-3">
                                <label for="species" class="form-label">Especie</label>
                                <select class="form-select" id="species">
                                    <option value="">Todas las especies</option>
                                    <option value="dog">Perro</option>
                                    <option value="cat">Gato</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="age" class="form-label">Edad</label>
                                <select class="form-select" id="age">
                                    <option value="">Todas las edades</option>
                                    <option value="young">Joven (1-3 años)</option>
                                    <option value="adult">Adulto (4-8 años)</option>
                                    <option value="senior">Senior (9+ años)</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search me-2"></i>Buscar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pets Grid -->
        <div class="row g-4" id="pets-container">
            {{#each pets}}
            <div class="col-lg-4 col-md-6">
                <div class="card pet-card h-100">
                    <div class="pet-image-container">
                        {{#if this.image}}
                        <img src="{{this.image}}" class="card-img-top pet-image" alt="{{this.name}}">
                        {{else}}
                        <div class="pet-placeholder">
                            <i class="fas fa-paw fa-3x text-muted"></i>
                        </div>
                        {{/if}}
                        <div class="pet-status {{this.status}}">
                            {{#if (eq this.status 'available')}}
                                <i class="fas fa-heart me-1"></i>Disponible
                            {{else if (eq this.status 'adopted')}}
                                <i class="fas fa-home me-1"></i>Adoptado
                            {{else if (eq this.status 'pending')}}
                                <i class="fas fa-clock me-1"></i>Pendiente
                            {{/if}}
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <div class="pet-info mb-3">
                            <span class="badge bg-light text-dark me-2">
                                {{#if (eq this.species 'dog')}}
                                    <i class="fas fa-dog me-1"></i>Perro
                                {{else if (eq this.species 'cat')}}
                                    <i class="fas fa-cat me-1"></i>Gato
                                {{else}}
                                    <i class="fas fa-paw me-1"></i>{{this.species}}
                                {{/if}}
                            </span>
                            <span class="badge bg-light text-dark me-2">
                                <i class="fas fa-birthday-cake me-1"></i>{{this.age}} años
                            </span>
                            <span class="badge bg-light text-dark">
                                {{#if (eq this.gender 'male')}}
                                    <i class="fas fa-mars me-1"></i>Macho
                                {{else if (eq this.gender 'female')}}
                                    <i class="fas fa-venus me-1"></i>Hembra
                                {{else}}
                                    <i class="fas fa-venus-mars me-1"></i>{{this.gender}}
                                {{/if}}
                            </span>
                        </div>
                        <p class="card-text text-muted">{{this.description}}</p>
                        
                        <!-- Characteristics -->
                        {{#if this.characteristics}}
                        <div class="characteristics mb-3">
                            {{#each this.characteristics}}
                            <span class="badge bg-secondary me-1">{{this}}</span>
                            {{/each}}
                        </div>
                        {{/if}}
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>
                                Publicado {{formatDate this.createdAt}}
                            </small>
                            <div class="btn-group">
                                <a href="/pets/{{this._id}}" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>Ver
                                </a>
                                {{#if (eq this.status 'available')}}
                                <a href="/adoptions/create?petId={{this._id}}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-heart me-1"></i>Adoptar
                                </a>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-paw fa-3x text-muted mb-3"></i>
                    <h3 class="text-muted">No hay mascotas disponibles</h3>
                    <p class="text-muted">¡Sé el primero en agregar una mascota!</p>
                    <a href="/pets/create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Agregar Primera Mascota
                    </a>
                </div>
            </div>
            {{/each}}
        </div>

        <!-- Pagination -->
        {{#if pagination}}
        {{#if pagination.totalPages}}
        {{#if (gt pagination.totalPages 1)}}
        <div class="row mt-5">
            <div class="col-12">
                <nav aria-label="Navegación de mascotas">
                    <ul class="pagination justify-content-center">
                        <!-- Previous button -->
                        {{#if (gt pagination.page 1)}}
                        <li class="page-item">
                            <a class="page-link" href="#" data-page="{{subtract pagination.page 1}}" class="pagination-link">
                                <i class="fas fa-chevron-left me-1"></i>Anterior
                            </a>
                        </li>
                        {{else}}
                        <li class="page-item disabled">
                            <span class="page-link">
                                <i class="fas fa-chevron-left me-1"></i>Anterior
                            </span>
                        </li>
                        {{/if}}
                        
                        <!-- Page numbers -->
                        {{#each (range 1 pagination.totalPages)}}
                        <li class="page-item {{#if (eq this ../pagination.page)}}active{{/if}}">
                            <a class="page-link pagination-link" href="#" data-page="{{this}}">{{this}}</a>
                        </li>
                        {{/each}}
                        
                        <!-- Next button -->
                        {{#if (lt pagination.page pagination.totalPages)}}
                        <li class="page-item">
                            <a class="page-link pagination-link" href="#" data-page="{{add pagination.page 1}}">
                                Siguiente<i class="fas fa-chevron-right ms-1"></i>
                            </a>
                        </li>
                        {{else}}
                        <li class="page-item disabled">
                            <span class="page-link">
                                Siguiente<i class="fas fa-chevron-right ms-1"></i>
                            </span>
                        </li>
                        {{/if}}
                    </ul>
                </nav>
                
                <!-- Pagination info -->
                <div class="text-center mt-3">
                    <small class="text-muted">
                        Mostrando {{add (multiply (subtract pagination.page 1) pagination.limit) 1}} - 
                        {{#if (eq pagination.page pagination.totalPages)}}
                            {{pagination.total}}
                        {{else}}
                            {{multiply pagination.page pagination.limit}}
                        {{/if}}
                        de {{pagination.total}} mascotas
                    </small>
                </div>
            </div>
        </div>
        {{/if}}
        {{/if}}
        {{/if}}
    </div>
</section>
