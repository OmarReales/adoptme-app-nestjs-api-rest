<!-- Register Page -->
<section
  style='min-height: 100vh; display: flex; align-items: center; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 2rem 0;'
>
  <div class='container'>
    <div class='row justify-content-center'>
      <div class='col-md-8 col-lg-6'>
        <div
          style='background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); border-radius: 20px; padding: 2.5rem; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); border: 1px solid rgba(255, 255, 255, 0.2);'
        >
          <div class='text-center mb-4'>
            <div class='mb-3'>
              <i
                class='fas fa-paw'
                style='font-size: 3rem; background: linear-gradient(45deg, #667eea, #764ba2); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;'
              ></i>
            </div>
            <h2
              style='font-weight: 700; color: #1e293b; margin-bottom: 0.5rem;'
            >Crear Cuenta</h2>
            <p style='color: #64748b;'>Únete a la comunidad AdoptMe</p>
          </div>

          <!-- Register Form -->
          <form id='registerForm'>
            <div class='row'>
              <div class='col-md-6 mb-3'>
                <label
                  for='firstName'
                  style='display: flex; align-items: center; gap: 0.5rem; color: #374151; font-weight: 500; margin-bottom: 0.5rem;'
                >
                  <i class='fas fa-user' style='color: #667eea;'></i>Nombre
                </label>
                <input
                  type='text'
                  class='form-control'
                  id='firstName'
                  name='firstName'
                  required
                  placeholder='Tu nombre'
                  style='border-radius: 12px; border: 2px solid #e9ecef; padding: 12px 16px; transition: all 0.3s ease; background: white;'
                />
                <div class='invalid-feedback'></div>
              </div>

              <div class='col-md-6 mb-3'>
                <label
                  for='lastName'
                  style='display: flex; align-items: center; gap: 0.5rem; color: #374151; font-weight: 500; margin-bottom: 0.5rem;'
                >
                  <i class='fas fa-user' style='color: #667eea;'></i>Apellido
                </label>
                <input
                  type='text'
                  class='form-control'
                  id='lastName'
                  name='lastName'
                  required
                  placeholder='Tu apellido'
                  style='border-radius: 12px; border: 2px solid #e9ecef; padding: 12px 16px; transition: all 0.3s ease; background: white;'
                />
                <div class='invalid-feedback'></div>
              </div>
            </div>

            <div class='mb-3'>
              <label
                for='username'
                style='display: flex; align-items: center; gap: 0.5rem; color: #374151; font-weight: 500; margin-bottom: 0.5rem;'
              >
                <i class='fas fa-at' style='color: #667eea;'></i>Nombre de
                Usuario
              </label>
              <input
                type='text'
                class='form-control'
                id='username'
                name='username'
                required
                minlength='3'
                placeholder='nombreusuario'
                style='border-radius: 12px; border: 2px solid #e9ecef; padding: 12px 16px; transition: all 0.3s ease; background: white;'
              />
              <div class='invalid-feedback'></div>
              <small style='color: #64748b; font-size: 0.875rem;'>
                Mínimo 3 caracteres, solo letras, números y guiones bajos
              </small>
            </div>

            <div class='mb-3'>
              <label
                for='email'
                style='display: flex; align-items: center; gap: 0.5rem; color: #374151; font-weight: 500; margin-bottom: 0.5rem;'
              >
                <i class='fas fa-envelope' style='color: #667eea;'></i>Correo
                Electrónico
              </label>
              <input
                type='email'
                class='form-control'
                id='email'
                name='email'
                required
                placeholder='tu@email.com'
                style='border-radius: 12px; border: 2px solid #e9ecef; padding: 12px 16px; transition: all 0.3s ease; background: white;'
              />
              <div class='invalid-feedback'></div>
            </div>

            <div class='mb-3'>
              <label
                for='age'
                style='display: flex; align-items: center; gap: 0.5rem; color: #374151; font-weight: 500; margin-bottom: 0.5rem;'
              >
                <i class='fas fa-birthday-cake' style='color: #667eea;'></i>Edad
              </label>
              <input
                type='number'
                class='form-control'
                id='age'
                name='age'
                required
                min='18'
                max='120'
                placeholder='25'
                style='border-radius: 12px; border: 2px solid #e9ecef; padding: 12px 16px; transition: all 0.3s ease; background: white;'
              />
              <div class='invalid-feedback'></div>
              <small style='color: #64748b; font-size: 0.875rem;'>
                Debes ser mayor de 18 años para adoptar
              </small>
            </div>

            <div class='mb-3'>
              <label
                for='password'
                style='display: flex; align-items: center; gap: 0.5rem; color: #374151; font-weight: 500; margin-bottom: 0.5rem;'
              >
                <i class='fas fa-lock' style='color: #667eea;'></i>Contraseña
              </label>
              <div style='position: relative;'>
                <input
                  type='password'
                  class='form-control'
                  id='password'
                  name='password'
                  required
                  minlength='8'
                  placeholder='Contraseña segura'
                  style='border-radius: 12px; border: 2px solid #e9ecef; padding: 12px 16px; transition: all 0.3s ease; background: white;'
                />
                <button
                  type='button'
                  data-target='password'
                  style='position: absolute; right: 12px; top: 50%; transform: translateY(-50%); background: none; border: none; color: #6c757d; cursor: pointer; padding: 0; width: 20px; height: 20px; display: flex; align-items: center; justify-content: center;'
                >
                  <i class='fas fa-eye'></i>
                </button>
              </div>
              <div class='invalid-feedback'></div>
              <div style='margin-top: 0.5rem;'>
                <div
                  style='height: 4px; background: #e9ecef; border-radius: 2px; overflow: hidden;'
                >
                  <div
                    style='height: 100%; background: #10b981; width: 0%; transition: width 0.3s ease;'
                  ></div>
                </div>
                <small style='color: #64748b; font-size: 0.875rem;'>
                  Mínimo 8 caracteres, incluye mayúsculas, minúsculas, números y
                  símbolos
                </small>
              </div>
            </div>

            <div class='mb-3'>
              <label
                for='confirmPassword'
                style='display: flex; align-items: center; gap: 0.5rem; color: #374151; font-weight: 500; margin-bottom: 0.5rem;'
              >
                <i class='fas fa-lock' style='color: #667eea;'></i>Confirmar
                Contraseña
              </label>
              <div style='position: relative;'>
                <input
                  type='password'
                  class='form-control'
                  id='confirmPassword'
                  name='confirmPassword'
                  required
                  minlength='8'
                  placeholder='Repite tu contraseña'
                  style='border-radius: 12px; border: 2px solid #e9ecef; padding: 12px 16px; transition: all 0.3s ease; background: white;'
                />
                <button
                  type='button'
                  data-target='confirmPassword'
                  style='position: absolute; right: 12px; top: 50%; transform: translateY(-50%); background: none; border: none; color: #6c757d; cursor: pointer; padding: 0; width: 20px; height: 20px; display: flex; align-items: center; justify-content: center;'
                >
                  <i class='fas fa-eye'></i>
                </button>
              </div>
              <div class='invalid-feedback'></div>
            </div>

            <div class='mb-3 form-check'>
              <input
                type='checkbox'
                class='form-check-input'
                id='terms'
                name='terms'
                required
                style='background-color: #667eea; border-color: #667eea;'
              />
              <label
                class='form-check-label'
                for='terms'
                style='color: #374151;'
              >
                Acepto los
                <a
                  href='/terms'
                  target='_blank'
                  style='color: #667eea; text-decoration: none;'
                >
                  Términos y Condiciones
                </a>
                y la
                <a
                  href='/privacy'
                  target='_blank'
                  style='color: #667eea; text-decoration: none;'
                >
                  Política de Privacidad
                </a>
              </label>
              <div class='invalid-feedback'></div>
            </div>

            <div class='mb-3 form-check'>
              <input
                type='checkbox'
                class='form-check-input'
                id='newsletter'
                name='newsletter'
                style='background-color: #667eea; border-color: #667eea;'
              />
              <label
                class='form-check-label'
                for='newsletter'
                style='color: #374151;'
              >
                Quiero recibir noticias sobre nuevas mascotas disponibles
              </label>
            </div>

            <button
              type='submit'
              style='width: 100%; background: linear-gradient(45deg, #667eea, #764ba2); border: none; border-radius: 12px; padding: 12px 24px; font-weight: 600; transition: all 0.3s ease; color: white; font-size: 1.1rem; margin-bottom: 1.5rem;'
            >
              <i
                class='fas fa-user-plus'
                style='margin-right: 0.5rem;'
              ></i>Crear Cuenta
            </button>
          </form>

          <!-- Auth Links -->
          <div class='text-center'>
            <p class='mb-0'>
              ¿Ya tienes cuenta?
              <a
                href='/login'
                style='color: #667eea; text-decoration: none; font-weight: 600; transition: color 0.3s ease;'
              >
                Inicia sesión aquí
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>