<!-- Login Page -->
<section
  style='min-height: 100vh; display: flex; align-items: center; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 2rem 0;'
>
  <div class='container'>
    <div class='row justify-content-center'>
      <div class='col-md-6 col-lg-5'>
        <div
          style='background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); border-radius: 20px; padding: 2.5rem; box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1); border: 1px solid rgba(255, 255, 255, 0.2);'
        >
          <div class='text-center mb-4'>
            <div class='mb-3'>
              <i
                class='fas fa-paw'
                style='font-size: 3rem; background: linear-gradient(45deg, #667eea, #764ba2); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;'
              ></i>
            </div>
            <h2
              style='font-weight: 700; color: #1e293b; margin-bottom: 0.5rem;'
            >Iniciar Sesión</h2>
            <p style='color: #64748b;'>Accede a tu cuenta de AdoptMe</p>
          </div>

          <!-- Login Form -->
          <form id='loginForm'>
            <div class='mb-3'>
              <label
                for='email'
                style='display: flex; align-items: center; gap: 0.5rem; color: #374151; font-weight: 500; margin-bottom: 0.5rem;'
              >
                <i class='fas fa-envelope' style='color: #667eea;'></i>Correo
                Electrónico
              </label>
              <input
                type='email'
                class='form-control'
                id='email'
                name='email'
                required
                placeholder='tu@email.com'
                style='border-radius: 12px; border: 2px solid #e9ecef; padding: 12px 16px; transition: all 0.3s ease; background: white;'
              />
              <div class='invalid-feedback'></div>
            </div>

            <div class='mb-3'>
              <label
                for='password'
                style='display: flex; align-items: center; gap: 0.5rem; color: #374151; font-weight: 500; margin-bottom: 0.5rem;'
              >
                <i class='fas fa-lock' style='color: #667eea;'></i>Contraseña
              </label>
              <div style='position: relative;'>
                <input
                  type='password'
                  class='form-control'
                  id='password'
                  name='password'
                  required
                  minlength='8'
                  placeholder='Tu contraseña'
                  style='border-radius: 12px; border: 2px solid #e9ecef; padding: 12px 16px; transition: all 0.3s ease; background: white;'
                />
                <button
                  type='button'
                  data-target='password'
                  style='position: absolute; right: 12px; top: 50%; transform: translateY(-50%); background: none; border: none; color: #6c757d; cursor: pointer; padding: 0; width: 20px; height: 20px; display: flex; align-items: center; justify-content: center;'
                >
                  <i class='fas fa-eye'></i>
                </button>
              </div>
              <div class='invalid-feedback'></div>
            </div>

            <div class='mb-3 form-check'>
              <input
                type='checkbox'
                class='form-check-input'
                id='remember'
                name='remember'
                style='background-color: #667eea; border-color: #667eea;'
              />
              <label
                class='form-check-label'
                for='remember'
                style='color: #374151;'
              >
                Recordarme
              </label>
            </div>

            <button
              type='submit'
              style='width: 100%; background: linear-gradient(45deg, #667eea, #764ba2); border: none; border-radius: 12px; padding: 12px 24px; font-weight: 600; transition: all 0.3s ease; color: white; font-size: 1.1rem; margin-bottom: 1.5rem;'
            >
              <i
                class='fas fa-sign-in-alt'
                style='margin-right: 0.5rem;'
              ></i>Iniciar Sesión
            </button>
          </form>

          <!-- Auth Links -->
          <div class='text-center' style='margin-bottom: 2rem;'>
            <p class='mb-2'>
              <a
                href='/forgot-password'
                style='color: #667eea; text-decoration: none; transition: color 0.3s ease;'
              >
                ¿Olvidaste tu contraseña?
              </a>
            </p>
            <p class='mb-0'>
              ¿No tienes cuenta?
              <a
                href='/register'
                style='color: #667eea; text-decoration: none; font-weight: 600; transition: color 0.3s ease;'
              >
                Regístrate aquí
              </a>
            </p>
          </div>

          <!-- Demo Credentials -->
          <div
            style='background: rgba(108, 117, 125, 0.1); border-radius: 12px; padding: 1rem; border: 1px solid rgba(108, 117, 125, 0.2);'
          >
            <h6 style='color: #64748b; margin-bottom: 1rem; font-weight: 600;'>
              <i
                class='fas fa-info-circle'
                style='margin-right: 0.5rem;'
              ></i>Credenciales de prueba:
            </h6>
            <div
              style='display: flex; align-items: center; justify-content: space-between; margin-bottom: 0.75rem;'
            >
              <small style='color: #64748b;'>
                <strong>Usuario:</strong>
                user@adoptme.com / User123!
              </small>
              <button
                class='btn btn-sm btn-outline-secondary'
                onclick="fillDemoCredentials('user@adoptme.com', 'User123!')"
                style='padding: 0.25rem 0.75rem; border-radius: 0.5rem; font-size: 0.8rem;'
              >
                Usar
              </button>
            </div>
            <div
              style='display: flex; align-items: center; justify-content: space-between;'
            >
              <small style='color: #64748b;'>
                <strong>Admin:</strong>
                admin@adoptme.com / Admin123!
              </small>
              <button
                class='btn btn-sm btn-outline-secondary'
                onclick="fillDemoCredentials('admin@adoptme.com', 'Admin123!')"
                style='padding: 0.25rem 0.75rem; border-radius: 0.5rem; font-size: 0.8rem;'
              >
                Usar
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>